<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
	<link rel="icon" href="images/favicon.ico" type="image/x-icon">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">								
								<h3>Latest News</h3>								
								{{#each latestNews}}
								<ul>								
									<li>
										<a href="{{this.link}}">{{this.name}}</a>
									</li>
								{{/each}}	
								</ul>								
								<h3>Vaction Tips</h3>								
								<ul>
									{{#each vacTips}}
									<li>
										<a href="{{this.link}}">{{this.name}}</a>
									</li>
								{{/each}}
								</ul>
							</div>
							<div>
								<h1>News</h1>
								{{#each newsPage}}
								<img src="images/{{this.image}}" alt="Img">
								<h2>{{this.storyName}}</h2>
								<span class="time">{{this.time}}<br> by: {{this.author}}</span>
								{{{this.story}}}
								{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>
</html>